<Window x:Class="PdfDataExtract.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PdfDataExtract"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <StackPanel Orientation="Horizontal" Margin="0 30 0 30">
                <Button Content="Upload PDF File" Click="UploadPdfFile_Click"/>
                <TextBlock x:Name="PdfFileNameText" TextWrapping="Wrap" Margin="10 0 0 0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button Content="Upload CSV File" Click="UploadCsvFile_Click"/>
                <TextBlock x:Name="CsvFileNameText" TextWrapping="Wrap" Margin="10 0 0 0"/>
            </StackPanel>
            <Button Content="Process Files" Click="ProcessFiles_Click" Margin="0 30"/>
            <TextBlock x:Name="ResultText" TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</Window>
